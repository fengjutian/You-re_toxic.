.container {
  padding: 24rpx;
}

.notice {
  background: #EEF1FF;
  padding: 24rpx;
  border-radius: 12rpx;
  margin-bottom: 24rpx;
  font-size: 26rpx;
}

.card {
  background: #FFFFFF;
  padding: 24rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
}

.question {
  font-weight: 600;
  margin-bottom: 12rpx;
}

.option {
  display: block;
  margin: 10rpx 0;
}

.submit {
  margin: 30rpx 0;
  background: linear-gradient(135deg, #9B59B6 0%, #8E44AD 100%);
  color: #FFFFFF;
}

.result-card {
  background: #FFFFFF;
  padding: 40rpx;
  border-radius: 20rpx;
  margin-top: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(91, 110, 255, 0.08);
}

.result-header {
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #F0F0F0;
}

.result-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #333;
  text-align: center;
}

.score-section {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 30rpx 0;
  padding: 30rpx 0;
  background: linear-gradient(135deg, #EEF2FF 0%, #F5F8FF 100%);
  border-radius: 16rpx;
}

.score-label {
  font-size: 28rpx;
  color: #666;
  margin-right: 20rpx;
}

.score-value {
  font-size: 72rpx;
  font-weight: 800;
  color: #5B6EFF;
  line-height: 1;
  margin-right: 10rpx;
}

.score-max {
  font-size: 28rpx;
  color: #999;
}

.level-section {
  margin: 30rpx 0;
  text-align: center;
  padding: 24rpx;
  background: #F8FAFF;
  border-radius: 12rpx;
}

.level-label {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 12rpx;
}

.level-text {
  font-size: 36rpx;
  font-weight: 700;
}

.level-normal {
  color: #52C41A;
}

.level-mild {
  color: #FAAD14;
}

.level-moderate {
  color: #FA8C16;
}

.level-moderate-severe {
  color: #FF7A45;
}

.level-severe {
  color: #FF4D4F;
}

.desc-section {
  margin: 24rpx 0;
}

.section-title {
  font-size: 26rpx;
  color: #5B6EFF;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.desc-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
}

.tip-section {
  margin: 24rpx 0;
  padding: 24rpx;
  background: linear-gradient(135deg, #FFF7E6 0%, #FFEFD6 100%);
  border-radius: 12rpx;
  border-left: 4rpx solid #FAAD14;
}

.tip-label {
  font-size: 26rpx;
  color: #D48806;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.tip-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
}

.clinical-note {
  margin-top: 24rpx;
  padding: 24rpx;
  background: linear-gradient(135deg, #F0F5FF 0%, #E6F0FF 100%);
  border-radius: 12rpx;
  border: 2rpx solid #BAE0FF;
  display: flex;
  align-items: flex-start;
}

.clinical-icon {
  font-size: 40rpx;
  margin-right: 16rpx;
}

.clinical-text {
  flex: 1;
}

.clinical-title {
  font-size: 26rpx;
  font-weight: 700;
  color: #5B6EFF;
  margin-bottom: 8rpx;
}

.clinical-detail {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 8rpx;
}

.clinical-stat {
  font-size: 24rpx;
  color: #999;
  font-style: italic;
}

.alert-card {
  margin-top: 24rpx;
  padding: 24rpx;
  background: linear-gradient(135deg, #FFF1F0 0%, #FFE8E6 100%);
  border-radius: 12rpx;
  border: 2rpx solid #FFCCC7;
  display: flex;
  align-items: flex-start;
}

.alert-icon {
  font-size: 40rpx;
  margin-right: 16rpx;
}

.alert-text {
  flex: 1;
}

.alert-title {
  font-size: 26rpx;
  font-weight: 700;
  color: #D93026;
  margin-bottom: 8rpx;
}

.alert-message {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}
