.container { padding: 24rpx; }

.disc-intro {
  background: #EEF5FF;
  padding: 24rpx;
  border-radius: 12rpx;
  margin-bottom: 24rpx;
}

.title { font-size: 34rpx; font-weight: 700; }
.desc { font-size: 26rpx; margin: 12rpx 0; }
.dim { font-size: 24rpx; color: #333; }

.card {
  background: #fff;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 12rpx;
}

.question { font-weight: 600; margin-bottom: 12rpx; }
.option { display: block; margin: 8rpx 0; }

.submit {
  margin-top: 24rpx;
  background: #4A90E2;
  color: #fff;
}

.result {
  margin-top: 32rpx;
  background: #F5F7FA;
  padding: 24rpx;
  border-radius: 12rpx;
}

.result-card {
  background: #FFFFFF;
  padding: 40rpx;
  border-radius: 20rpx;
  margin-top: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(74, 144, 226, 0.08);
}

.result-header {
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #F0F0F0;
}

.result-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #333;
  text-align: center;
}

.type-section {
  margin: 30rpx 0;
  text-align: center;
  padding: 30rpx;
  background: linear-gradient(135deg, #EEF5FF 0%, #F0F8FF 100%);
  border-radius: 16rpx;
}

.type-label {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.type-value {
  font-size: 56rpx;
  font-weight: 800;
  color: #4A90E2;
  margin-bottom: 12rpx;
}

.combo-value {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.type-desc {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
}

.dimensions-section {
  margin: 24rpx 0;
}

.dimensions-title {
  font-size: 28rpx;
  color: #4A90E2;
  font-weight: 600;
  margin-bottom: 20rpx;
}

.dimension-item {
  margin-bottom: 24rpx;
  padding: 24rpx;
  background: #F8FAFF;
  border-radius: 12rpx;
  position: relative;
}

.dim-header {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.dim-code {
  width: 60rpx;
  height: 60rpx;
  background: linear-gradient(135deg, #4A90E2 0%, #5BA0F5 100%);
  color: #FFFFFF;
  font-size: 32rpx;
  font-weight: 800;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 12rpx;
  margin-right: 16rpx;
}

.dim-name {
  font-size: 28rpx;
  color: #4A90E2;
  font-weight: 700;
}

.dim-english {
  font-size: 24rpx;
  color: #999;
  font-style: italic;
  margin-bottom: 12rpx;
}

.dim-desc {
  font-size: 26rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 12rpx;
}

.dim-keywords {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  margin-bottom: 16rpx;
}

.keyword-tag {
  font-size: 24rpx;
  color: #4A90E2;
  background: #EEF5FF;
  padding: 6rpx 16rpx;
  border-radius: 12rpx;
}

.dim-score-bar {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.score-label {
  font-size: 24rpx;
  color: #666;
  min-width: 80rpx;
}

.score-progress {
  flex: 1;
  height: 20rpx;
  background: #E8F0FF;
  border-radius: 10rpx;
  overflow: hidden;
}

.score-fill {
  height: 100%;
  background: linear-gradient(90deg, #4A90E2 0%, #5BA0F5 100%);
  border-radius: 10rpx;
  transition: width 0.3s ease;
}

.score-text {
  font-size: 24rpx;
  color: #4A90E2;
  font-weight: 600;
  min-width: 60rpx;
  text-align: right;
}

.main-badge,
.combo-badge {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  font-size: 22rpx;
  color: #FFFFFF;
  padding: 6rpx 16rpx;
  border-radius: 12rpx;
  font-weight: 600;
}

.main-badge {
  background: linear-gradient(135deg, #FF6B6B 0%, #FF8787 100%);
}

.combo-badge {
  background: linear-gradient(135deg, #4ECDC4 0%, #45B7D1 100%);
}

.note-card {
  margin-top: 24rpx;
  padding: 24rpx;
  background: linear-gradient(135deg, #FFFBE6 0%, #FFF7CC 100%);
  border-radius: 12rpx;
  border: 2rpx solid #FFE58F;
  display: flex;
  align-items: flex-start;
}

.note-icon {
  font-size: 40rpx;
  margin-right: 16rpx;
}

.note-text {
  flex: 1;
}

.note-title {
  font-size: 26rpx;
  font-weight: 700;
  color: #D48806;
  margin-bottom: 8rpx;
}

.note-message {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}
