.container {
  padding: 15px;
  background-color: #f7f7f7;
  height: 100vh;
  overflow-y: auto;
  background: linear-gradient(135deg, #56ab2f 0%, #a8e6cf 100%);
  box-sizing: border-box;
}

.tip-card {
  background-color: #fff;
  border-radius: 16px;
  padding: 10px;
  margin-bottom: 20px;
  box-shadow: 0 8px 24px rgba(0,0,0,0.12);
  border-left: 4px solid transparent;
  transition: all 0.3s ease;
}

.tip-card:hover {
  transform: translateY(-2px);
  box-shadow: 0 12px 32px rgba(0,0,0,0.16);
}

.tip-header {
  display: flex;
  align-items: center;
  margin-bottom: 16px;
}

.tip-color-indicator {
  width: 12px;
  height: 12px;
  border-radius: 50%;
  margin-right: 12px;
  flex-shrink: 0;
}

.tip-dim {
  font-size: 18px;
  font-weight: 700;
  color: #333;
  flex: 1;
}

.tip-suggestions {
  margin-left: 24px;
}

.tip-item {
  display: flex;
  align-items: flex-start;
  font-size: 15px;
  color: #444;
  line-height: 1.6em;
  margin-bottom: 12px;
}

.tip-item:last-child {
  margin-bottom: 0;
}

.tip-bullet {
  font-size: 20px;
  margin-right: 8px;
  flex-shrink: 0;
  line-height: 0.8;
}

.tip-content {
  flex: 1;
  word-break: break-word;
}

/**
 * Floating button styles
 * Positioned in the bottom right corner of the screen
 */
.float-button {
  position: fixed;
  bottom: 30px;
  right: 30px;
  width: 150px;
  height: 48px;
  border-radius: 24px;
  box-shadow: 0 8px 24px rgba(0, 0, 0, 0.2);
  font-size: 16px;
  font-weight: 600;
  transition: all 0.3s ease;
  z-index: 1000;
}

.float-button:hover {
  transform: translateY(-2px);
  box-shadow: 0 12px 32px rgba(0, 0, 0, 0.25);
}

.float-button:active {
  transform: translateY(1px);
  box-shadow: 0 6px 16px rgba(0, 0, 0, 0.2);
}
