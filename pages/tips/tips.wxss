.container {
  padding: 24px;
  background-color: #f7f7f7;
  min-height: 100vh;
}

.tips-header {
  font-size: 18px;
  font-weight: bold;
  color: #333;
  margin-bottom: 20px;
}

.tip-card {
  background-color: #fff;
  border-radius: 12px;
  padding: 16px;
  margin-bottom: 16px;
  box-shadow: 0 2px 6px rgba(0,0,0,0.08);
}

.tip-dim {
  font-size: 16px;
  font-weight: 600;
  color: #007aff;
  margin-bottom: 8px;
}

.tip-item {
  font-size: 15px;
  color: #444;
  line-height: 1.5em;
  margin-bottom: 6px;
}
