.container {
  padding: 24rpx;
}

.notice {
  background: #EAF0FF;
  padding: 24rpx;
  border-radius: 12rpx;
  margin-bottom: 24rpx;
  font-size: 26rpx;
}

.card {
  background: #FFFFFF;
  padding: 24rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
}

.question {
  font-weight: 600;
  margin-bottom: 12rpx;
}

.option {
  display: block;
  margin: 10rpx 0;
}

.submit {
  margin: 30rpx 0;
  background-color: #3A7AFE;
  color: #FFFFFF;
}

.result {
  background: #FFFFFF;
  padding: 30rpx;
  border-radius: 16rpx;
}

.score {
  font-size: 36rpx;
  font-weight: bold;
}

.level {
  color: #3A7AFE;
  margin-top: 10rpx;
}

.desc, .tip {
  margin-top: 8rpx;
  color: #666;
}
