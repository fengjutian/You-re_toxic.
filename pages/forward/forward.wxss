.container {
  padding: 24px;
  background-color: #f0f9f2;
  min-height: 100vh;
  background: linear-gradient(135deg, #e6f7ec 0%, #f0f9f2 100%);
}

.question-counter {
  text-align: center;
  font-size: 16px;
  font-weight: 600;
  color: #56ab2f;
  margin-bottom: 20px;
  padding: 12px;
  background-color: #fff;
  border-radius: 12px;
  box-shadow: 0 4px 12px rgba(86, 171, 47, 0.1);
}

.question-box {
  background-color: #fff;
  padding: 24px;
  border-radius: 16px;
  box-shadow: 0 6px 20px rgba(86, 171, 47, 0.12);
  margin-bottom: 24px;
}

.question {
  font-size: 18px;
  color: #333;
  margin-bottom: 24px;
  line-height: 1.6;
}

.option {
  margin-bottom: 16px;
}

.radio-label {
  display: flex;
  align-items: center;
  font-size: 16px;
  color: #444;
  padding: 12px;
  border-radius: 8px;
  transition: all 0.3s ease;
  border: 2px solid transparent;
}

.radio-label:active {
  background-color: rgba(86, 171, 47, 0.05);
}

.radio-label radio {
  margin-right: 12px;
  transform: scale(1.2);
  color: #56ab2f;
}

/* Custom radio styling */
.radio-label radio[checked] {
  color: #56ab2f;
}

.next-btn {
  width: 100%;
  background: linear-gradient(135deg, #56ab2f 0%, #a8e6cf 100%);
  color: #fff;
  font-size: 18px;
  font-weight: 600;
  padding: 14px 0;
  border-radius: 12px;
  box-shadow: 0 6px 20px rgba(86, 171, 47, 0.3);
  transition: all 0.3s ease;
}

.next-btn:hover {
  transform: translateY(-2px);
  box-shadow: 0 8px 24px rgba(86, 171, 47, 0.4);
}

.next-btn:active {
  opacity: 0.9;
  transform: translateY(0);
}
