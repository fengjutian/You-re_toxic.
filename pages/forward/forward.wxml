<view class="container">
  <view class="question">{{current.question}}</view>
  <radio-group bindchange="onChange">
    <view wx:for="{{options}}" wx:key="value" wx:for-item="option" class="option">
      <label>
        <radio value="{{option.value + ''}}" />
        <text>{{option.label}}</text>
      </label>
    </view>
  </radio-group>
  <button bindtap="next">下一题</button>
</view>
