.container { padding: 24rpx; }

.intro {
  background: #F0F7FF;
  padding: 24rpx;
  border-radius: 12rpx;
  margin-bottom: 24rpx;
}

.title {
  font-size: 34rpx;
  font-weight: 700;
}

.desc {
  margin: 12rpx 0;
  font-size: 26rpx;
}

.dim {
  font-size: 24rpx;
  color: #333;
}

.card {
  background: #fff;
  padding: 20rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.question {
  font-weight: 600;
  margin-bottom: 12rpx;
}

.option {
  display: block;
  margin: 8rpx 0;
}

.submit {
  margin-top: 24rpx;
  background: #4A90E2;
  color: #fff;
}

.result {
  margin-top: 32rpx;
  background: #F5F7FA;
  padding: 24rpx;
  border-radius: 12rpx;
}

.result-card {
  background: #FFFFFF;
  padding: 40rpx;
  border-radius: 20rpx;
  margin-top: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(74, 144, 226, 0.08);
}

.result-header {
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #F0F0F0;
}

.result-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #333;
  text-align: center;
}

.type-section {
  margin: 30rpx 0;
  text-align: center;
  padding: 30rpx;
  background: linear-gradient(135deg, #E8F5FF 0%, #F0F8FF 100%);
  border-radius: 16rpx;
}

.type-label {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.type-code {
  font-size: 56rpx;
  font-weight: 800;
  color: #4A90E2;
  margin-bottom: 12rpx;
  letter-spacing: 4rpx;
}

.type-summary {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 12rpx;
}

.type-scope {
  font-size: 26rpx;
  color: #4A90E2;
  font-weight: 600;
  background: rgba(74, 144, 226, 0.1);
  padding: 8rpx 20rpx;
  border-radius: 12rpx;
  display: inline-block;
}

.jobs-section {
  margin: 24rpx 0;
  padding: 24rpx;
  background: #F8FAFF;
  border-radius: 12rpx;
}

.jobs-title {
  font-size: 26rpx;
  color: #4A90E2;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.jobs-list {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
}

.dimensions-section {
  margin: 24rpx 0;
}

.dimensions-title {
  font-size: 28rpx;
  color: #4A90E2;
  font-weight: 600;
  margin-bottom: 20rpx;
}

.dimension-item {
  margin-bottom: 24rpx;
  padding: 24rpx;
  background: #F8FAFF;
  border-radius: 12rpx;
}

.dim-header {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.dim-code {
  width: 50rpx;
  height: 50rpx;
  background: #E0E0E0;
  color: #666;
  font-size: 24rpx;
  font-weight: 700;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 8rpx;
  margin-right: 12rpx;
}

.dim-code.active {
  background: linear-gradient(135deg, #4A90E2 0%, #5BA0F5 100%);
  color: #FFFFFF;
}

.dim-name {
  font-size: 26rpx;
  color: #333;
  font-weight: 600;
}

.dim-english {
  font-size: 24rpx;
  color: #999;
  font-style: italic;
  margin-bottom: 12rpx;
}

.dim-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 12rpx;
}

.dim-keywords {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  margin-bottom: 16rpx;
}

.keyword-tag {
  font-size: 24rpx;
  color: #4A90E2;
  background: rgba(74, 144, 226, 0.1);
  padding: 6rpx 16rpx;
  border-radius: 12rpx;
}

.dim-score-bar {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.score-label {
  font-size: 24rpx;
  color: #666;
  min-width: 80rpx;
}

.score-progress {
  flex: 1;
  height: 20rpx;
  background: #E8F0FF;
  border-radius: 10rpx;
  overflow: hidden;
}

.score-fill {
  height: 100%;
  background: #D0D7FF;
  border-radius: 10rpx;
  transition: width 0.3s ease;
}

.score-fill.active {
  background: linear-gradient(90deg, #4A90E2 0%, #5BA0F5 100%);
}

.score-text {
  font-size: 24rpx;
  color: #4A90E2;
  font-weight: 600;
  min-width: 60rpx;
  text-align: right;
}

.comparison-card {
  margin: 24rpx 0;
  padding: 20rpx;
  background: linear-gradient(135deg, #E6F7FF 0%, #F0F5FF 100%);
  border-radius: 12rpx;
  border: 2rpx solid #BAE0FF;
  display: flex;
  align-items: flex-start;
}

.comparison-icon {
  font-size: 40rpx;
  margin-right: 16rpx;
}

.comparison-text {
  flex: 1;
}

.comparison-title {
  font-size: 26rpx;
  color: #4A90E2;
  font-weight: 700;
  margin-bottom: 8rpx;
}

.comparison-message {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

.note-card {
  margin-top: 24rpx;
  padding: 24rpx;
  background: linear-gradient(135deg, #FFFBE6 0%, #FFF7CC 100%);
  border-radius: 12rpx;
  border: 2rpx solid #FFE58F;
  display: flex;
  align-items: flex-start;
}

.note-icon {
  font-size: 40rpx;
  margin-right: 16rpx;
}

.note-text {
  flex: 1;
}

.note-title {
  font-size: 26rpx;
  font-weight: 700;
  color: #D48806;
  margin-bottom: 8rpx;
}

.note-message {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}
