.container { padding:24rpx; }

.intro { background:#F0FFF0; padding:24rpx; border-radius:12rpx; margin-bottom:24rpx; }
.title { font-size:34rpx; font-weight:700; }
.desc { font-size:26rpx; margin-top:12rpx; }

.card { background:#fff; padding:20rpx; border-radius:12rpx; margin-bottom:20rpx; }
.question { font-weight:600; margin-bottom:12rpx; }
.option { display:block; margin:8rpx 0; }

.submit {
  margin-top: 24rpx;
  background: linear-gradient(135deg, #9B59B6 0%, #8E44AD 100%);
  color: #fff;
}

.result {
  margin-top: 32rpx;
}

.result-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #333;
  margin-bottom: 24rpx;
  text-align: center;
}

.dimension-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
  color: #fff;
}

.dimension-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.dimension-name {
  font-size: 32rpx;
  font-weight: 700;
}

.dimension-level {
  font-size: 24rpx;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
  background: rgba(255, 255, 255, 0.3);
}

.level-high { background: rgba(46, 204, 113, 0.8); }
.level-good { background: rgba(241, 196, 15, 0.8); }
.level-normal { background: rgba(255, 255, 255, 0.3); }
.level-low { background: rgba(231, 76, 60, 0.8); }

.score-section {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 12rpx;
  padding: 16rpx;
}

.score-info {
  display: flex;
  align-items: baseline;
  margin-right: 16rpx;
}

.score-value {
  font-size: 40rpx;
  font-weight: 700;
  color: #fff;
}

.score-max {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
  margin-left: 4rpx;
}

.progress-bar {
  flex: 1;
  height: 12rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 6rpx;
  overflow: hidden;
  margin-right: 16rpx;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #4facfe 0%, #00f2fe 100%);
  border-radius: 6rpx;
  transition: width 0.3s ease;
}

.score-percent {
  font-size: 28rpx;
  font-weight: 700;
  color: #fff;
}

.dimension-desc {
  font-size: 26rpx;
  line-height: 1.6;
  margin-bottom: 16rpx;
  color: rgba(255, 255, 255, 0.95);
}

.keywords-section {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.keyword-tag {
  font-size: 22rpx;
  padding: 6rpx 16rpx;
  background: rgba(255, 255, 255, 0.25);
  border-radius: 20rpx;
  color: #fff;
}

.advice-note {
  font-size: 24rpx;
  line-height: 1.5;
  padding: 12rpx;
  background: rgba(0, 0, 0, 0.1);
  border-radius: 8rpx;
}

.advice-label {
  font-weight: 600;
}

.coverage-info {
  margin-top: 32rpx;
  background: #F5F7FA;
  border-radius: 12rpx;
  padding: 24rpx;
}

.info-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #333;
  margin-bottom: 16rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  padding: 12rpx 0;
  border-bottom: 1px solid #e0e0e0;
  font-size: 26rpx;
}

.info-item:last-child {
  border-bottom: none;
}

.info-item.highlight {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  margin: 0 -24rpx;
  margin-bottom: 0;
  padding: 16rpx 24rpx;
  border-radius: 8rpx;
  color: #fff;
  font-weight: 600;
}

.info-label {
  color: #666;
  font-weight: 600;
}

.info-item.highlight .info-label {
  color: rgba(255, 255, 255, 0.9);
}

.info-value {
  color: #333;
}

.info-item.highlight .info-value {
  color: #fff;
}
