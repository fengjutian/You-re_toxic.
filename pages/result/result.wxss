.container {
  padding:24px;
  background-color:#f0f9f2;
  min-height:100vh;
  background: linear-gradient(135deg, #e6f7ec 0%, #f0f9f2 100%);
}

.section{
  margin-bottom:24px;
  background:#fff;
  padding:24px;
  border-radius:16px;
  box-shadow:0 6px 20px rgba(86, 171, 47, 0.12);
  border-left:4px solid #56ab2f;
}

.title{
  font-weight:bold;
  margin-bottom:16px;
  color:#56ab2f;
  font-size:18px;
}

.text{
  color:#444;
  font-size:16px;
  line-height:1.6;
}

.dimension-item {
  color:#444;
  font-size:16px;
  line-height:1.6;
  margin-bottom:8px;
  padding-left:20px;
  position:relative;
}

.dimension-item::before {
  content:"â€¢";
  color:#56ab2f;
  font-weight:bold;
  position:absolute;
  left:0;
}

.next-btn{
  width:100%;
  background: linear-gradient(135deg, #56ab2f 0%, #a8e6cf 100%);
  color:#fff;
  font-size:18px;
  font-weight:600;
  padding:14px 0;
  border-radius:12px;
  box-shadow:0 6px 20px rgba(86, 171, 47, 0.3);
  transition:all 0.3s ease;
}

.next-btn:hover {
  transform:translateY(-2px);
  box-shadow:0 8px 24px rgba(86, 171, 47, 0.4);
}

.next-btn:active {
  opacity:0.9;
  transform:translateY(0);
}
