.container { padding: 24rpx; }

.intro {
  background: #F4F7FF;
  padding: 24rpx;
  border-radius: 12rpx;
  margin-bottom: 24rpx;
}

.title {
  font-size: 34rpx;
  font-weight: 700;
}

.desc {
  font-size: 26rpx;
  margin-top: 12rpx;
}

.card {
  background: #fff;
  padding: 20rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.question {
  font-weight: 600;
  margin-bottom: 12rpx;
}

.option {
  display: block;
  margin: 8rpx 0;
}

.submit {
  margin-top: 24rpx;
  background: linear-gradient(135deg, #9B59B6 0%, #8E44AD 100%);
  color: #fff;
}

.result {
  margin-top: 32rpx;
  background: #F5F7FA;
  padding: 24rpx;
  border-radius: 12rpx;
}

.result-card {
  background: #FFFFFF;
  padding: 40rpx;
  border-radius: 20rpx;
  margin-top: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(74, 144, 226, 0.08);
}

.result-header {
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #F0F0F0;
}

.result-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #333;
  text-align: center;
}

.factor-card {
  margin-bottom: 24rpx;
  padding: 24rpx;
  background: #F8FAFF;
  border-radius: 12rpx;
}

.factor-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
  padding-bottom: 12rpx;
  border-bottom: 1rpx solid #E8F5FF;
}

.factor-key {
  font-size: 36rpx;
  font-weight: 800;
  color: #4A90E2;
  margin-right: 16rpx;
  width: 80rpx;
  text-align: center;
}

.factor-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 700;
  flex: 1;
}

.factor-english {
  font-size: 22rpx;
  color: #999;
  font-style: italic;
  margin-left: 12rpx;
}

.factor-score {
  display: flex;
  align-items: center;
  margin: 16rpx 0;
}

.score-label {
  font-size: 24rpx;
  color: #666;
  min-width: 80rpx;
}

.score-bar {
  flex: 1;
  height: 24rpx;
  background: #E8F5FF;
  border-radius: 12rpx;
  overflow: hidden;
}

.score-fill {
  height: 100%;
  background: linear-gradient(90deg, #4A90E2 0%, #5BA0F5 100%);
  border-radius: 12rpx;
  transition: width 0.3s ease;
}

.score-text {
  font-size: 24rpx;
  color: #4A90E2;
  font-weight: 600;
  min-width: 60rpx;
  text-align: right;
}

.factor-desc-title {
  font-size: 26rpx;
  color: #4A90E2;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.factor-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 12rpx;
}

.factor-keywords {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.keyword-tag {
  font-size: 22rpx;
  color: #4A90E2;
  background: rgba(74, 144, 226, 0.1);
  padding: 6rpx 16rpx;
  border-radius: 12rpx;
}

.note-card {
  margin-top: 24rpx;
  padding: 24rpx;
  background: linear-gradient(135deg, #FFFBE6 0%, #FFF7CC 100%);
  border-radius: 12rpx;
  border: 2rpx solid #FFE58F;
  display: flex;
  align-items: flex-start;
}

.note-icon {
  font-size: 40rpx;
  margin-right: 16rpx;
}

.note-text {
  flex: 1;
}

.note-title {
  font-size: 26rpx;
  font-weight: 700;
  color: #D48806;
  margin-bottom: 8rpx;
}

.note-message {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}
